
{% block title %}
{{ headTitle('Blog - ') }}
{% endblock %}

<div class="row">
{% for blog in blogs %}
    <div class="span6">
        <h2>{{ blog.title }}</h2>
        
        <p><span class="label label-important">{{blog.badge}}</span></p>
        <p>{{ blog.lead|raw }}</p>

        <a class="btn btn-success" href="/blog/view/{{ blog.id }}" target="_self">{{ blog.title }} &raquo;</a></p>
    </div>
{% endfor %}

</div>
