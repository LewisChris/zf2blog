                	<li 
                    {% if 'games' in getPath() %}
					class="active"
					{% endif %}
					><a href="{{ url('games') }}">Arcade</a></li>
                 
                    <li 
                    {% if 'blog' in getPath() %}
					class="active"
					{% endif %}
					><a href="{{ url('blog') }}">Blog</a></li>
					
                    <li 
                        {% if '/user/login' == getPath() %}
                        class="active"
                        {% endif %}
                        >
                    {% if(zfcUserIdentity().id>0)  %} 
                        <a href="/user">Welcome {{zfcUserIdentity().email}}</a></li>
                    {% else %}
                            <a href="/user">Login</a>
                {% endif %}
                </li>
                
                

					
            </ul>
          </div>
        </div>
      </div>
    </div>


